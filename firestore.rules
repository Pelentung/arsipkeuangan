
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if the requesting user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Function to check if the user is a regular user (not anonymous)
    function isRegularUser() {
      return request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can read their own document space
      allow read: if isOwner(userId);
      // Only non-anonymous owners can write to their document space
      allow write: if isOwner(userId) && isRegularUser();

      // Rules for the 'contracts' subcollection within each user document
      match /contracts/{contractId} {
        // Any authenticated owner can read their contracts
        allow get, list: if isOwner(userId);
        // Only non-anonymous owners can manage their contracts
        allow create, update, delete: if isOwner(userId) && isRegularUser();
      }
    }

    // Parties are public, anyone can read them, but no one can write.
    match /parties/{partyId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if false; // Managed by a backend process
    }
  }
}
