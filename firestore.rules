
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if the requesting user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Users can only read/write to their own document space
      allow read, write: if isOwner(userId);

      // Rules for the 'contracts' subcollection within each user document
      match /contracts/{contractId} {
        // Only the owner of the user document can manage their contracts
        allow get, list, create, update, delete: if isOwner(userId);
      }
    }

    // Parties are public, anyone can read them, but no one can write.
    match /parties/{partyId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if false; // Managed by a backend process
    }
  }
}
